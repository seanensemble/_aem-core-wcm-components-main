                <text_1740702241
                    cq:styleIds="[1644862132301]"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-components-examples/components/text"
                    text="&lt;h1>Language Navigation&lt;sub>v2&lt;/sub>&lt;/h1>"
                    textIsRich="true"/>
                <text
                    cq:styleIds="[1544762734201]"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-components-examples/components/text"
                    text="&lt;p>The Language Navigation component provides a language and country navigation for a site, so that visitors can navigate to the same page in a different locale. It is commonly added to a page template, in the header or footer.&lt;/p>"
                    textIsRich="true"/>
                <teaser
                    cq:styleIds="[1550165685463]"
                    jcr:description="&lt;p>GitHub&lt;/p>"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Technical Documentation"
